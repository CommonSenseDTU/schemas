{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents a geographic position measurement.",
    "type": "object",

    "definitions": {
        "plane_angle_unit_value": {
            "$ref": "plane-angle-unit-value-1.x.json"
        },
        "length_unit_value": {
            "$ref": "length-unit-value-1.x.json"
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "signal_to_noise_ratio_unit_value": {
            "$ref": "signal-to-noise-ratio-unit-value-1.x.json"
        }
    },

    "properties": {
        "latitude": {
            "references": [
                {
                    "description": "The NCIT code represents Latitude. Negative numbers indicate South.",
                    "url": "http://ncicb.nci.nih.gov/xml/owl/EVS/Thesaurus.owl#C6864"
                }
            ],
            "$ref": "#/definitions/plane_angle_unit_value"
        },
        "longitude": {
            "references": [
                {
                    "description": "The NCIT code represents Longitude. Negative numbers indicate West.",
                    "url": "http://ncicb.nci.nih.gov/xml/owl/EVS/Thesaurus.owl#C68643"
                }
            ],
            "$ref": "#/definitions/plane_angle_unit_value"
        },
        "elevation": {
            "references": [
                {
                    "description": "The LOINC code represents Altitude (Length:Point in time:^Patient:Quantitative).",
                    "url": "http://purl.bioontology.org/ontology/LNC/41905-1"
                },
                {
                    "description": "Although the term altitude is commonly used to mean the height above sea level of a location, in geography the term elevation is often preferred for this usage.",
                    "url": "https://en.wikipedia.org/wiki/Altitude"
                }
            ],
            "$ref": "#/definitions/length_unit_value"
        },
        "accuracy": {
            "description": "This represents the accuracy, in meters, of a geoposition measurement.",
            "type": "object",
            "references": [
                {
                    "description": "The HL7 code represents position accuracy.",
                    "url": "http://purl.bioontology.org/ontology/HL7/C3244100"
                },
                {
                    "description": "The various measures of GPS accuracy.",
                    "url": "http://inventeksys.com/GPS_Facts_GPS_accuracy_measures.pdf"
                }
            ],
            "allOf": [
                {
                    "$ref": "#/definitions/length_unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": [
                                "m"
                            ]
                        }
                    }
                }
            ],
            "accuracy_measure": {
                "description": "Known measures are listed. Others can be added, if needed.",
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "enum": ["rms", "CEP", "R95", "2drms", "SEP"]
                    }
                ]
            },
            "dimension": {
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "enum": ["horizontal", "vertical", "3-D"]
                    }
                ]
            }
        },
        "effective_time_frame": {
            "description": "A position measure should not be associated to a time interval. Hence, effective time frame is restricted to be a date time.",
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "number_of_satellites_in_view": {
            "description": "The number of satellites that can potentially be used to determine position.",
            "type": "integer"
        },
        "satellite_signal_strength": {
            "description": "The Signal to Noise Ratio (SNR) of each satellite, expressed in decibels (dB). The higher the number, the stronger the signal. Typical value for a good fix is 20-40.",
            "type": "array",
            "items": {
                "$ref": "#/definitions/signal_to_noise_ratio_unit_value"
            }
        },
        "number_of_satellites_in_fix": {
            "description": "The number of satellites actually used to determine position.",
            "type": "integer"
        },
        "positioning_system": {
            "description": "Known systems are listed. Others can be added, if needed. More than one can be used at the same time, hence this is an array",
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "enum": ["GPS", "GLONASS", "Galileo","Beidou","COMPASS","IRNSS","QZSS"]
                    }
                ]
            }
        }
    },
    "required": [
        "latitude",
        "longitude"
    ]
}