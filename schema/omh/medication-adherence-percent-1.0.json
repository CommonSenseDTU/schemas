{
   "$schema":"http://json-schema.org/draft-04/schema#",

   "description":"This schema represents summary adherence to a prescription as a ratio doses taken / doses prescribed x 100 within a time frame.",

   "type":"object",
    "references": [
        {
            "description": "The SNOMED code represents Adherence to medication regime",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/418633004"
        }
    ],
   "definitions": {
        "medication_prescription": {
            "$ref": "medication-prescription-1.0.json"
        },
        "time_frame": {
            "$ref": "time-frame-1.1.json"
        }
   },
   "properties": {
      "medication_prescription":{
         "$ref": "#/definitions/medication_prescription"
      },
      "effective_time_frame": {
          "$ref": "#/definitions/time_frame"
      },
      "medication_adherence_percent": {
         "type":"number",
         "minimum": 0,
         "maximum": 100
      }
   },
   "required": ["medication_prescription","medication_adherence_percent"]
}