{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents a measure of the maximum volume of oxygen a person can use.",
    "type": "object",
    "references": [
        {
            "description": "The SNOMED code represents Maximum oxygen uptake (observable entity)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/251898000"
        }
    ],

    "definitions": {
        "unit_value": {
            "$ref": "unit-value-1.x.json"
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "descriptive_statistic": {
            "$ref": "descriptive-statistic-1.x.json"
        }
    },

    "properties": {
        "vo2_max": {
            "allOf": [
                {
                    "$ref": "#/definitions/unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": [
                                "mL/kg/min"
                            ]
                        }
                    }
                }
            ]
        },
        "effective_time_frame": {
            "$ref": "#/definitions/time_frame"
        },
        "descriptive_statistic": {
            "$ref": "#/definitions/descriptive_statistic"
        }
    },
    "required": [
        "vo2_max",
        "effective_time_frame"
    ]
}