{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "This schema serves to wrap health kit metadata into an omh-compliant form",
  "type": "array",
  "definitions":{
    "date_time":{
      "$ref":"date-time-1.x.json"
    }
  },
  "items":{
    "type":"object",
    "title":"HK Metadata Item",
    "properties":{
      "key":{
        "type":"string"
      },
      "value":{
        "oneOf":[
          {"type":"string"},
          {"type":"number"},
          {"$ref":"#/definitions/date_time"}
        ]
      }
    }
  }
}