{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the Plarre et al. self-report measure of perceived stress.",
    "type": "object",
    "references": [
        {
            "description": "Plarre et al. Continuous Inference of Psychological Stress from Sensory Measurements Collected in the Natural Environment 2011.",
            "url": "http://pie.eng.usf.edu/wp-content/uploads/2011/12/plarre-ipsn20111.pdf"
        }
    ],
    "definitions": {
        "tuple": {
            "type": "object",
            "properties": {
                "question_identifier": {
                    "type": "string"
                },
                "question_text": {
                    "type": "string"
                },
                "answer": {
                    "type": "array",
                    "enum": [
                        [0, "NO"],
                        [1, "no"],
                        [2, "yes"],
                        [3, "YES"]
                    ],
                    "additionalItems": false
                },
                "effective_time_frame": {
                    "allOf": [
                        {
                            "$ref": "time-frame-1.x.json"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                }
            },
            "required": [
                "question_text"
            ],
            "additionalProperties": false
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },
    "properties": {
        "tuples": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "SStress1r"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "I feel cheerful."
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "SStress2r"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "I feel happy."
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "SStress3r"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "I feel angry/frustrated."
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "SStress4r"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "I feel nervous/stressed."
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "SStress5r"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "I feel sad."
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "time_frame_first_delivered": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "time_frame_last_available": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "stress": {
            "description": "SStress = (3 – SAffect1r) + (3 – SAffect2r) + SAffect3 + SAffect4 + SAffect5",
            "type": "integer",
            "minimum": 0,
            "maximum": 15
        },
        "status": {
            "type": "string",
            "enum": ["successful","missed","abandoned"]
        },
        "trigger": {
            "type": "string",
            "enum": ["random","event","signal","end of day"]
        }
    },
    "required": ["time_frame_first_delivered","status"],
    "additionalProperties": false
}