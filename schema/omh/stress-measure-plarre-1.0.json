{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the Plarre et al. self-report measure of perceived stress.",
    "type": "object",
    "references": [
        {
            "description": "Plarre et al. Continuous Inference of Psychological Stress from Sensory Measurements Collected in the Natural Environment 2011.",
            "url": "http://pie.eng.usf.edu/wp-content/uploads/2011/12/plarre-ipsn20111.pdf"
        }
    ],
    "definitions": {
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "item": {
            "type": "object",
            "properties": {
                "question": {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string"
                        },
                        "text": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "text"
                    ]
                },
                "answer": {
                    "type": "object",
                    "enum": [
                        {
                            "code": 0,
                            "text": "NO"
                        },
                        {
                            "code": 1,
                            "text": "no"
                        },
                        {
                            "code": 2,
                            "text": "yes"
                        },
                        {
                            "code": 3,
                            "text": "YES"
                        }
                    ],
                    "additionalItems": false
                },
                "first_delivered_time_frame": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_frame"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                },
                "answered_time_frame": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_frame"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "items": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "code": "SStress1r",
                                            "text": "I feel cheerful."
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "code": "SStress2r",
                                            "text": "I feel happy."
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "code": "SStress3r",
                                            "text": "I feel angry/frustrated."
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "code": "SStress4r",
                                            "text": "I feel nervous/stressed."
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "code": "SStress5r",
                                            "text": "I feel sad."
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "first_delivered_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "last_available_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "stress_measure": {
            "description": "SStress = (3 – SAffect1r) + (3 – SAffect2r) + SAffect3 + SAffect4 + SAffect5",
            "type": "integer",
            "minimum": 0,
            "maximum": 15
        },
        "status": {
            "type": "string",
            "enum": ["successful","missed","abandoned"]
        },
        "trigger": {
            "type": "string",
            "enum": ["random","event","signal","end of day"]
        }
    },
    "required": ["first_delivered_time_frame","status"],
    "additionalProperties": false
}