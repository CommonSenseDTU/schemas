{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents signal-to-noise ratio (SNR) expressed in decibels (dB). The higher the number, the stronger the signal. ",
    "type": "object",

    "allOf": [
        {
            "$ref": "unit-value-1.0.json"
        },
        {
            "properties": {
                "value": {
                    "type": "integer"
                },
                "unit": {
                    "references": [
                        {
                            "description": "The unit of measure of the element.",
                            "url": "http://unitsofmeasure.org/ucum.html#para-46"
                        }
                    ],
                    "enum": [
                        "dB"
                    ]
                }
            }
        }
    ]
}
