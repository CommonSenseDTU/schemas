{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the set of a person's Photographic Affect Meter (PAM) scores, which represent the mood and affective experience of that person.",
    "description": "Problem: can't make it work as inheritance of generic affect",
    "type": "object",
    "references": [
        {
            "description": "Pollak, J.P., Adams, P., Gay, G. (2011) PAM: a photographic affect meter for frequent, in situ measurement of affect. in the Proceedings of the ACM Conference on Human Factors in Computing Systems (CHI 2011) Vancouver, BC, Canada, May 5-12, pp. 725-734.",
            "url": "http://idl.cornell.edu/projects/pam/"
        },
        {
            "description": "PA = (4 * Valence) + Arousal - 4; NA = 4 * (5 - Valence) + Arousal - 4"
        }
    ],

    "definitions": {
        "affect_measure": {
            "$ref": "affect-measure-1.x.json"
        }
    },

    "properties": {
        "pam": {
            "allOf": [
                {
                    "$ref": "#/definitions/affect_measure"
                },
                {
                    "properties": {
                        "valence": {
                            "minimum": 1,
                            "maximum": 4
                        },
                        "arousal": {
                            "minimum": 1,
                            "maximum": 4
                        },
                        "positive_affect": {
                            "minimum": 1,
                            "maximum": 16
                        },
                        "negative_affect": {
                            "minimum": 1,
                            "maximum": 16
                        }
                    }
                }
            ]
        },
        "mood": {
            "type": "string",
            "enum": [
                "afraid",
                "tense",
                "excited",
                "delighted",
                "frustrated",
                "angry",
                "happy",
                "glad",
                "miserable",
                "sad",
                "calm",
                "satisfied",
                "gloomy",
                "tired",
                "sleepy",
                "serene"
            ]
        }
    },
    "additionalProperties": false
}
