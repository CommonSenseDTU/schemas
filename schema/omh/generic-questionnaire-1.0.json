{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents a generic questionnaire, but it is not accurate in terms of structure.",
    "type": "object",
    "references": [
        {
            "description": ""
        }
    ],
    "definitions": {
        "generic_categorical_measure": {
            "$ref": "generic-categorical-measure-1.x.json"
        },
        "generic_multiple_selection": {
            "$ref": "generic-multiple-selection-1.x.json"
        },
        "generic_numeric_measure": {
            "$ref": "generic-numeric-measure-1.x.json"
        },
        "generic_text_measure": {
            "$ref": "generic-text-measure-1.x.json"
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },
    "properties": {
        "questionnaire": {
            "type": "object",
            "anyOf": [
                {
                    "properties": {
                        "item": {
                            "$ref": "#/definitions/generic_categorical_measure"
                        }
                    },
                    "required": [
                        "item"
                    ]
                },
                {
                    "properties": {
                        "item": {
                            "$ref": "#/definitions/generic_multiple_selection"
                        }
                    },
                    "required": [
                        "item"
                    ]
                },
                {
                    "properties": {
                        "item": {
                            "$ref": "#/definitions/generic_numeric_measure"
                        }
                    },
                    "required": [
                        "item"
                    ]
                },
                {
                    "properties": {
                        "item": {
                            "$ref": "#/definitions/generic_text_measure"
                        }
                    },
                    "required": [
                        "item"
                    ]
                }
            ]
        },
        "assessment_method": {
            "description": "This is usually part of the schema name: for example, affect-pam is the schema that measures affect using the PAM instrument.",
            "type": "string"
        },
        "effective_time_frame": {
            "description": "If each item must have a time stamp associated with it, this property needs to be included in each item.",
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        }
    }
