{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the random experience questions for the MD2K smoking detection study.",
    "type": "object",
    "references": [
        {
            "description": "This is a custom questionnaire."
        },
        {
            "description": "Add a reference to a standard vocabulary term, if applicable (e.g., Tobacco smoking behavior (finding) for questionnaires that explore smoking behavior).",
            "url": "<url of term on BioPortal>"
        }
    ],
    "definitions": {
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "first_question_item": {
            "description": "Include here the question type to be used and specify code set and text of the answers."
        },
        "second_question_item": {
            "description": "Include here the question type to be used and specify code set and text of the answers."
        },
        "description": "Add as many items as needed, choosing them from the generic set and customizing as needed (see below)."

    },
    "properties": {
        "items": {
            "type": "array",
            "description": "Add as many items as needed, based on the questionnaire's definition.",
            "items": [
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/first_question_item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "description": "Add here the skip logic definition, if applicable.",
                                            "code": "Specify here the question code (e.g., EXPSmo).",
                                            "text": "Specify here the question text (e.g., Have you smoked since the last time you recorded anything on the phone?)."
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/second_question_item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "description": "Add here the skip logic definition, if applicable.",
                                            "code": "Specify here the question code (e.g., EXPSmo).",
                                            "text": "Specify here the question text (e.g., Have you smoked since the last time you recorded anything on the phone?)."
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "first_delivered_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "start_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": [
                        "date_time"
                    ]
                }
            ]
        },
        "last_available_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "delay_start_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": [
                        "date_time"
                    ]
                }
            ]
        },
        "delay_end_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": [
                        "date_time"
                    ]
                }
            ]
        },
        "status": {
            "description": "Add more values to the value set and/or choose the applicable subset, as needed.",
            "type": "string",
            "enum": ["abandoned","missed", "successful"]
        },
        "trigger": {
            "description": "Add more values to the value set and/or choose the applicable subset, as needed.",
            "type": "string",
            "enum": ["event", "random", "signal"]
        }
    },
    "required": ["first_delivered_time_frame","status"]
}