{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the random experience questions for the MD2K smoking detection study.",
    "type": "object",
    "references": [
        {
            "description": "This is a custom questionnaire."
        },
        {
            "description": "The SNOMED code represents Tobacco smoking behavior (finding)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/365981007"
        }
    ],
    "definitions": {
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "yn_item": {
            "type": "object",
            "properties": {
                "question": {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string"
                        },
                        "text": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "text"
                    ]
                },
                "answer": {
                    "type": "object",
                    "enum": [
                        {
                            "code": 0,
                            "text": "no"
                        },
                        {
                            "code": 1,
                            "text": "yes"
                        }
                    ],
                    "additionalItems": false
                },
                "question_start_time_frame": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_frame"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                },
                "question_end_time_frame": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_frame"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                }
            },
            "additionalProperties": false
        },
        "time_item": {
            "type": "object",
            "properties": {
                "question": {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string"
                        },
                        "text": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "text"
                    ]
                },
                "answer": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 120
                },
                "question_start_time_frame": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_frame"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                },
                "question_end_time_frame": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_frame"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                }
            },
            "additionalProperties": false
        },
        "scale_item": {
            "type": "object",
            "properties": {
                "question": {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string"
                        },
                        "text": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "text"
                    ]
                },
                "answer": {
                    "type": "object",
                    "enum": [
                        {
                            "code": 1,
                            "text": "not useful"
                        },
                        {
                            "code": 2,
                            "text": "somewhat useful"
                        },
                        {
                            "code": 3,
                            "text": "moderately useful"
                        },
                        {
                            "code": 4,
                            "text": "very useful"
                        },
                        {
                            "code": 5,
                            "text": "extremely useful"
                        }
                    ],
                    "additionalItems": false
                },
                "question_start_time_frame": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_frame"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                },
                "question_end_time_frame": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_frame"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "items": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/yn_item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "code": "EXPSmo",
                                            "text": "Have you smoked since the last time you recorded anything on the phone?"
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "description": "If EXPSmo = 1, then EXPSmoLat is displayed.",
                                            "code": "EXPSmoLat",
                                            "text": "Approximately how long ago did you take the first puff from that cigarette?"
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/yn_item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "code": "EXPInt",
                                            "text": "Have you received a stress-reduction suggestion on your watch since the last time you recorded anything on the phone?"
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/yn_item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "code": "EXPIntUse",
                                            "text": "Did you access any of the stress reduction apps on the phone?"
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/scale_item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "description": "If EXPIntUse = 1, then EXPIntHelp is displayed.",
                                            "code": "EXPIntHelp",
                                            "text": "How useful did you find the stress reduction app?"
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/yn_item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "code": "EXPIntSR",
                                            "text": "Did you use any of the stress reduction exercises (with or without the app) since the last time you recorded anything on the phone?"
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "time_frame_first_delivered": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "time_frame_last_available": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "delay_start_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": [
                        "date_time"
                    ]
                }
            ]
        },
        "delay_end_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": [
                        "date_time"
                    ]
                }
            ]
        },
        "status": {
            "type": "string",
            "enum": ["successful","missed","abandoned"]
        },
        "trigger": {
            "type": "string",
            "enum": ["random"]
        }
    },
    "required": ["time_frame_first_delivered","status"],
    "additionalProperties": false
}