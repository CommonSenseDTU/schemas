{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the random experience sampling questions for the MD2K smoking cessation study.",
    "type": "object",
    "references": [
        {
            "description": "This is a custom questionnaire."
        },
        {
            "description": "The SNOMED code represents Tobacco smoking behavior (finding)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/365981007"
        }
    ],
    "definitions": {
        "tuple_yn": {
            "type": "object",
            "properties": {
                "question_identifier": {
                    "type": "string"
                },
                "question_text": {
                    "type": "string"
                },
                "answer": {
                    "type": "array",
                    "enum": [
                        [0, "no"],
                        [1, "yes"]
                    ],
                    "additionalItems": false
                }
            },
            "required": [
                "question_text"
            ],
            "additionalProperties": false
        },

        "tuple_time": {
            "type": "object",
            "properties": {
                "question_identifier": {
                    "type": "string"
                },
                "question_text": {
                    "type": "string"
                },
                "answer": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 120
                }
            },
            "required": [
                "question_text"
            ],
            "additionalProperties": false
        },
        "tuple_scale": {
            "type": "object",
            "properties": {
                "question_identifier": {
                    "type": "string"
                },
                "question_text": {
                    "type": "string"
                },
                "answer": {
                    "type": "array",
                    "enum": [
                        [1, "not useful"],
                        [2, "somewhat useful"],
                        [3, "moderately useful"],
                        [4, "very useful"],
                        [5, "extremely useful"]
                    ],
                    "additionalItems": false
                }
            },
            "required": [
                "question_text"
            ],
            "additionalProperties": false
        },

        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },
    "properties": {
        "tuples": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple_yn"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "EXPSmo"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "Have you smoked since the last time you recorded anything on the phone?"
                                    ]
                                }
                            }
                        }
                    ],
                    "effective_time_frame": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/time_frame"
                            },
                            {
                                "required": [
                                    "date_time"
                                ]
                            }
                        ]
                    }
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple_time"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "EXPSmoLat"
                                    ]
                                },
                                "description": "(only if EXPEat=1)",
                                "question_text": {
                                    "enum": [
                                        "Approximately how long ago did you take the first puff from that cigarette?"
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple_yn"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "EXPInt"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "Have you received a stress-reduction suggestion on your watch since the last time you recorded anything on the phone?"
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple_yn"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "EXPIntUse"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "Did you access any of the stress reduction apps on the phone?"
                                    ]
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple_scale"
                        },
                        {
                            "properties": {
                                "description": "(only if EXPIntUse=1)",
                                "question_identifier": {
                                    "enum": [
                                        "EXPIntHelp"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "How useful did you find the stress reduction app?"
                                    ]
                                }
                            }
                        }
                    ]
                },

                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple_yn"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "EXPIntSR"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "Did you use any of the stress reduction exercises (with or without the app) since the last time you recorded anything on the phone?"
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "time_frame_first_delivered": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "time_frame_last_available": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },

        "status": {
            "type": "string",
            "enum": ["successful","missed","abandoned"]
        },
        "trigger": {
            "type": "string",
            "enum": ["random"]
        }
    },
    "required": ["time_frame_first_delivered","status"],
    "additionalProperties": false
}