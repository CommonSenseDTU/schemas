{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents a generic question with 0/1 as answer code and no/yes as answer text. This is a special case of the generic question categorical schema.",
    "type": "object",

    "definitions": {
        "date_time": {
            "$ref": "date-time-1.x.json"
        },
        "yn_item": {
            "type": "object",
            "properties": {
                "question": {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string"
                        },
                        "text": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "text"
                    ]
                },
                "answer": {
                    "type": "object",
                    "enum": [
                        {
                            "code": 0,
                            "text": "no"
                        },
                        {
                            "code": 1,
                            "text": "yes"
                        }
                    ],
                    "additionalItems": false
                },
                "date_time": {
                    "description": "Create one property for each of the question-level timestamp you need: for ex., start_date_time, end_date_time",
                    "$ref": "#/definitions/date_time"
                }
            },
            "additionalProperties": false
        }
    }
}