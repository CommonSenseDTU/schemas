{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the generic concept of positive affect and negative affect which are calculated based on affect and valence. There are various ways of establishing affect and valence and of calculating positive and negative affect values.",
    "type": "object",
    "references": [
        {
            "description": "The SNOMED code represents Affect, function (observable entity)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/4065008"
        }
    ],
    "definitions": {
        "valence": {
            "type": "integer"
        },
        "arousal": {
            "type": "integer"
        },
        "affect": {
            "type": "integer"
        },
        "instrument_name": {
            "type": "string"
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },
    "properties": {
        "valence": {
            "$ref": "#/definitions/valence"
        },
        "arousal": {
            "$ref": "#/definitions/arousal"
        },
        "positive_affect": {
            "$ref": "#/definitions/affect"
        },
        "negative_affect": {
            "$ref": "#/definitions/affect"
        },
        "effective_time_frame": {
            "$ref": "#/definitions/time_frame"
        },
        "instrument_name": {
            "$ref": "#/definitions/instrument_name"
        }
    },
    "required": ["positive_affect"]
}