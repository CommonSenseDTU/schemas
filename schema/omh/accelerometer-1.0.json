{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents an accelerometer's measurement.",
    "type": "object",

    "definitions": {
        "acceleration_unit_value": {
            "$ref": "aceleratione-unit-value-1.x.json"
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },

    "properties": {
        "acceleration_x": {
            "$ref": "#/definitions/acceleration_unit_value"
        },
        "acceleration_y": {
            "$ref": "#/definitions/acceleration_unit_value"
        },
        "acceleration_z": {
            "$ref": "#/definitions/acceleration_unit_value"
        },
        "accuracy": {
            "description": "This represents the acccuracy, in meters, of a GPS measurement.",
            "type": "object",
            "references": [
                {
                    "description": "The HL7 code represents position accuracy.",
                    "url": "http://purl.bioontology.org/ontology/HL7/C3244100"
                },
                {
                    "description": "The various measures of GPS accuracy.",
                    "url": "http://inventeksys.com/GPS_Facts_GPS_accuracy_measures.pdf"
                }
            ],
            "allOf": [
                {
                    "$ref": "#/definitions/length_unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": [
                                "m"
                            ]
                        }
                    }
                }
            ],
            "accuracy_measure": {
                "type": "string",
                "enum": ["rms", "CEP", "R95", "2drms", "SEP"]
            },
            "dimension": {
                "type": "string",
                "enum": ["horizontal", "vertical", "3-D"]
            }
        },
        "effective_time_frame": {
            "description": "As a measure of a duration, sleep duration should not be associated to a date time time frame. Hence, effective time frame is restricted to be a time interval.",
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        }
    },
    "required": [
        "acceleration_x",
        "acceleration_y",
        "acceleration_z"
    ]
}