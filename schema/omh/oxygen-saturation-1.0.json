{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents the oxygen saturation, either a single measurement, or the result of aggregating several measurements made over time (see Descriptive statistic schema for a list of aggregate measures)",
    "type": "object",
    "references": [
        {
            "description": "The SNOMED code represents Hemoglobin saturation with oxygen (observable entity)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/431314004"
        }
    ],

    "definitions": {
        "unit_value": {
            "$ref": "unit-value-1.x.json"
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "descriptive_statistic": {
            "$ref": "descriptive-statistic-1.x.json"
        }
    },

    "properties": {
        "oxygen_saturation": {
            "allOf": [
                {
                    "$ref": "#/definitions/unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": [
                                "%"
                            ]
                        }
                    }
                }
            ]
        },
        "system": {
            "type": "string",
            "references": [
                {
                    "value": "arterial",
                    "description": "The SNOMED code represents Arterial oxygen saturation (observable entity) [SaO2]",
                    "url": "http://purl.bioontology.org/ontology/SNOMEDCT/442476006"
                },
                {
                    "value": "capillary",
                    "description": "The SNOMED code represents Capillary oxygen saturation (observable entity) [ScO2]",
                    "url": "http://purl.bioontology.org/ontology/SNOMEDCT/442440005"
                },
                {
                    "value": "intracardiac",
                    "description": "The SNOMED code represents Intracardiac oxygen saturation (observable entity)",
                    "url": "http://purl.bioontology.org/ontology/SNOMEDCT/442381003"
                },
                {
                    "value": "jugular bulb",
                    "description": "The SNOMED code represents Jugular bulb oxygen saturation (observable entity)",
                    "url": "http://purl.bioontology.org/ontology/SNOMEDCT/442386008"
                },
                {
                    "value": "peripheral",
                    "description": "The SNOMED code represents Peripheral oxygen saturation (observable entity) [SpO2]",
                    "url": "http://purl.bioontology.org/ontology/SNOMEDCT/431314004"
                },
                {
                    "value": "conjunctival",
                    "description": "The SNOMED code represents Conjunctival oxygen saturation (observable entity)",
                    "url": "http://purl.bioontology.org/ontology/SNOMEDCT/373638005"
                },
                {
                    "value": "venous",
                    "description": "The SNOMED code represents Venous oxygen saturation (observable entity) [SvO2]",
                    "url": "http://purl.bioontology.org/ontology/SNOMEDCT/442349007"
                },
                {
                    "value": "mixed venous",
                    "description": "The SNOMED code represents Mixed venous oxygen saturation (observable entity) [SvO2]",
                    "url": "http://purl.bioontology.org/ontology/SNOMEDCT/442734002"
                },
                {
                    "value": "superior vena cava",
                    "description": "The SNOMED code represents Superior vena cava oxygen saturation (observable entity)",
                    "url": "http://purl.bioontology.org/ontology/SNOMEDCT/442694009"
                }
            ],
            "enum": [
                "arterial",
                "capillary",
                "intracardiac",
                "jugular bulb",
                "peripheral",
                "conjunctival",
                "venous",
                "mixed venous",
                "superior vena cava"
            ]
        },
        "supplemental_oxygen_flow_rate": {
            "description": "0 LPM means room air",
            "allOf": [
                {
                    "$ref": "#/definitions/unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": [
                                "LPM"
                            ]
                        }
                    }
                }
            ]
        },
        "oxygen_therapy_mode_of_administration": {
            "type": "string",
            "enum": [
                "face mask",
                "nasal cannula",
                "Venturi mask"
            ]
        },
        "measurement_method": {
            "type": "string",
            "enum": [
                "pulse oximetry",
                "arterial blood gas analyzer",
                "near-infrared spectroscopy"
            ]
        },
        "effective_time_frame": {
            "$ref": "#/definitions/time_frame"
        },
        "descriptive_statistic": {
            "$ref": "#/definitions/descriptive_statistic"
        }
    },
    "required": ["oxygen_saturation"],
    "additionalProperties": false
}