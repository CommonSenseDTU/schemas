{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "This schema represents a speed measurement (length divided by time).",
    "references": [
        {
            "description": "The NCIT code represents Speed (motion).",
            "url": "https://ncim.nci.nih.gov/ncimbrowser/ConceptReport.jsp?dictionary=NCI%20MetaThesaurus&code=C0678536"
        }
    ],
    "definitions": {
        "unit_value": {
            "$ref": "unit-value-1.x.json"
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "descriptive_statistic": {
            "$ref": "descriptive-statistic-1.x.json"
        }
    },

    "properties": {
        "speed": {
            "allOf": [
                {
                    "$ref": "#/definitions/unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "references": [
                                {
                                    "description": "The unit of measure of the element. Derived unit from base units is meter per second.",
                                    "url": "http://unitsofmeasure.org/ucum.html#section-Base-Units"
                                }
                            ],
                            "enum": [
                                "m/s",
                                "km/h",
                                "mph"
                            ]
                        }
                    }
                }
            ]
        },
        "effective_time_frame": {
            "$ref": "#/definitions/time_frame"
        },
        "descriptive_statistic": {
            "$ref": "#/definitions/descriptive_statistic"
        }
    },

    "required": ["speed"]
}