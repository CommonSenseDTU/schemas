{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents a generic question with a set of answers.",
    "type": "object",

    "definitions": {
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },
    "properties": {
        "question": {
            "type": "string",
            "enum": ["Do you have the desire to eat when you are irritated?"]
        },
        "answer": {
            "oneOf": [
                {
                    "type": "array",
                    "items": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "string"
                        }
                    ],
                    "enum": [
                        [1, "never"],
                        [2, "seldom"],
                        [3, "sometimes"],
                        [4, "often"],
                        [5, "very"]
                    ],
                    "additionalItems": false
                },
                {
                    "type": "array",
                    "items": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "string"
                        }
                    ],
                    "enum": [
                        ["NR", "not relevant"]
                    ],
                    "additionalItems": false
                }
            ]
        },
        "effective_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        }
    },
    "required": ["question","answer"],
    "additionalProperties": false
}