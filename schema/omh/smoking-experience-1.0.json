{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the random experience questions for the MD2K smoking detection study.",
    "type": "object",
    "references": [
        {
            "description": "This is a custom questionnaire."
        },
        {
            "description": "The SNOMED code represents Tobacco smoking behavior (finding)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/365981007"
        }
    ],
    "definitions": {
        "date_time": {
            "$ref": "date-time-1.x.json"
        },
        "generic_categorical_question": {
            "$ref": "generic-categorical-question-1.x.json"
        },
        "generic_open_question": {
            "$ref": "generic-open-question-1.x.json"
        },
        "generic_unit_value_question": {
            "$ref": "generic-unit-value-question-1.x.json"
        },
        "generic_multiple_answer_question": {
            "$ref": "generic-multiple-answer-question-1.x.json"
        },
        "duration_unit_value": {
            "$ref": "duration-unit-value-1.x.json"
        },
        "yesno_value_set": {
            "type": "object",
            "enum": [
                {
                    "code": 0,
                    "text": "NO!!!"
                },
                {
                    "code": 1,
                    "text": "NO"
                },
                {
                    "code": 2,
                    "text": "no"
                },
                {
                    "code": 3,
                    "text": "yes"
                },
                {
                    "code": 4,
                    "text": "YES"
                },
                {
                    "code": 5,
                    "text": "YES!!!"
                }
            ],
            "additionalItems": false
        }
    },
    "properties": {
        "items": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/generic_categorical_question"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "label": "EXPSmo",
                                            "text": "Have you smoked since the last time you recorded anything on the phone?"
                                        }
                                    ]
                                },
                                "answer": {
                                    "enum": [
                                        {
                                            "code": 0,
                                            "text": "no"
                                        },
                                        {
                                            "code": 1,
                                            "text": "yes"
                                        }
                                    ]
                                },
                                "start_date_time": {
                                    "$ref": "#/definitions/date_time"
                                },
                                "end_date_time": {
                                    "$ref": "#/definitions/date_time"
                                }
                            },
                            "additionalProperties": false
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/generic_unit_value_question"
                        },
                        {
                            "properties": {
                                "question": {
                                    "description": "If EXPSmo = 1, then EXPSmoTime is displayed.",
                                    "enum": [
                                        {
                                            "label": "EXPSmoTime",
                                            "text": "Approximately how long ago did you take the first puff from that cigarette?"
                                        }
                                    ]
                                },
                                "answer": {
                                    "type": "object",
                                    "allOf": [
                                        {
                                            "$ref": "#/definitions/duration_unit_value"
                                        },
                                        {
                                            "properties": {
                                                "unit": {
                                                    "enum": [
                                                        "min"
                                                    ]
                                                }
                                            }
                                        }
                                    ]
                                },
                                "start_date_time": {
                                    "$ref": "#/definitions/date_time"
                                },
                                "end_date_time": {
                                    "$ref": "#/definitions/date_time"
                                }
                            },
                            "additionalProperties": false
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/generic_open_question"
                        },
                        {
                            "properties": {
                                "question": {
                                    "description": "If EXPSmo = 1, then EXPSmoText is displayed.",
                                    "enum": [
                                        {
                                            "label": "EXPSmoText",
                                            "text": "How did it feel to inhale that first puff?"
                                        }
                                    ]
                                },
                                "answer": {
                                    "type": "string"
                                },
                                "start_date_time": {
                                    "$ref": "#/definitions/date_time"
                                },
                                "end_date_time": {
                                    "$ref": "#/definitions/date_time"
                                }
                            },
                            "additionalProperties": false
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/generic_multiple_answer_question"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "label": "DDTFB",
                                            "text": "Please check the hour blocks when you took 1 or more puffs today."
                                        }
                                    ]
                                },
                                "answer": {
                                    "items": {
                                        "type": "string",
                                        "enum": [
                                            "8am-9am",
                                            "9am-10am",
                                            "10am-11am",
                                            "11am-12pm",
                                            "12pm-1pm",
                                            "1pm-2pm",
                                            "2pm-3pm",
                                            "3pm-4pm",
                                            "4pm-5pm",
                                            "5pm-6pm",
                                            "6pm-7pm",
                                            "7pm-8pm"
                                        ]
                                    }
                                },
                                "start_date_time": {
                                    "$ref": "#/definitions/date_time"
                                },
                                "end_date_time": {
                                    "$ref": "#/definitions/date_time"
                                }
                            },
                            "additionalProperties": false
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/generic_categorical_question"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "label": "SUrge",
                                            "text": "How strong is your urge to smoke right now?"
                                        }
                                    ]
                                },
                                "answer": {
                                    "enum": [
                                        {
                                            "code": 0,
                                            "text": "no urge"
                                        },
                                        {
                                            "code": 1,
                                            "text": "weak"
                                        },
                                        {
                                            "code": 2,
                                            "text": "moderate"
                                        },
                                        {
                                            "code": 3,
                                            "text": "severe"
                                        }
                                    ],
                                    "additionalItems": false
                                },
                                "start_date_time": {
                                    "$ref": "#/definitions/date_time"
                                },
                                "end_date_time": {
                                    "$ref": "#/definitions/date_time"
                                }
                            },
                            "additionalProperties": false
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/generic_categorical_question"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "label": "SStress1r",
                                            "text": "I feel cheerful."
                                        }
                                    ]
                                },
                                "answer": {
                                    "$ref": "#/definitions/yesno_value_set"
                                },
                                "start_date_time": {
                                    "$ref": "#/definitions/date_time"
                                },
                                "end_date_time": {
                                    "$ref": "#/definitions/date_time"
                                }
                            },
                            "additionalProperties": false
                        }
                    ]
                },
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/generic_categorical_question"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "label": "SStress2r",
                                            "text": "I feel happy."
                                        }
                                    ]
                                },
                                "answer": {
                                    "$ref": "#/definitions/yesno_value_set"
                                },
                                "start_date_time": {
                                    "$ref": "#/definitions/date_time"
                                },
                                "end_date_time": {
                                    "$ref": "#/definitions/date_time"
                                }
                            },
                            "additionalProperties": false
                        }
                    ]
                }
            ],
            "additionalItems": false
        },
        "first_delivered_date_time": {
            "$ref": "#/definitions/date_time"
        },
        "start_date_time": {
            "$ref": "#/definitions/date_time"
        },
        "last_available_date_time": {
            "$ref": "#/definitions/date_time"
        },
        "delay_start_date_time": {
            "$ref": "#/definitions/date_time"
        },
        "delay_end_date_time": {
            "$ref": "#/definitions/date_time"
        },
        "status": {
            "type": "string",
            "enum": ["successful","missed","abandoned"]
        }
    },
    "required": ["first_delivered_date_time","status"]
}