{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "An Apple HealthKit quantity sample that represents data using a single numerical value.",
    "type": "object",

    "references": [
        {
            "description": "The class reference for HKQuantitySample.",
            "url": "https://developer.apple.com/library/ios/documentation/HealthKit/Reference/HKQuantitySample_Class/index.html"
        },
        {
            "description": "The class reference for HKUnit the describes all the units used in HealthKit",
            "url":"https://developer.apple.com/library/ios/documentation/HealthKit/Reference/HKUnit_Class/index.html"
        }
    ],

    "definitions": {
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "hk_quantity_type": {
            "$ref": "hk-quantity-type-1.0.json"
        },
        "unit_value": {
            "$ref": "unit-value-1.x.json"
        },
        "hk_metadata": {
            "$ref": "hk-metadata-1.0.json"
        }
    },

    "properties": {
        "effective_time_frame": {
            "description":"The date and time range or point when the sample occurred. When startdate and enddate are different, use the time_interval property, and when they are the same, use the date-time property.",
            "$ref": "#/definitions/time_frame"
        },
        "quantity_value":{
            "description": "The quantity value for this sample either as a unit_value or unitless number in the case of data points that have 'count' as the unit in HealthKit.",
            "oneOf":[
                {
                    "properties":{
                        "unit_value": {
                            "$ref": "#/definitions/unit_value"
                        }
                    },
                    "required":["unit_value"]
                },
                {
                    "properties":{
                        "count":{
                            "type":"number"
                        }
                    },
                    "required":["count"]
                }
            ]
        },
        "quantity_type": {
            "description": "The quantity type for this sample.",
            "$ref": "#/definitions/hk_quantity_type"
        },
        "metadata": {
            "$ref": "#/definitions/hk_metadata"
        }
    },
    "required":["effective_time_frame","quantity_value","quantity_type"]
}