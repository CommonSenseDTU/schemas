{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema shows a sample survey.",
    "type": "object",

    "definitions": {
        "date_time": {
            "$ref": "date-time-1.x.json"
        },
        "survey": {
            "$ref": "survey-1.x.json"
        },
        "survey_item": {
            "$ref": "survey-item-1.x.json"
        },
        "survey_categorical_answer": {
            "$ref": "survey-categorical-answer-1.x.json"
        },
        "survey_categorical_answer_item": {
            "description": "A survey item that has one or more categorical answers.",
            "allOf": [
                {
                    "$ref": "#/definitions/survey_item"
                },
                {
                    "type": "object",
                    "properties": {
                        "answers": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/survey_categorical_answer"
                            }
                        }
                    }
                }
            ]
        },
        "frequency_scale_item": {
            "description": "A categorical answer item where the answer is one of the four frequency categories from PHQ-9.",
            "allOf": [
                {
                    "$ref": "#/definitions/survey_categorical_answer_item"
                },
                {
                    "type": "object",
                    "properties": {
                        "answers": {
                            "items": {
                                "enum": [
                                    {
                                        "code": "0",
                                        "value": "Not at all"
                                    },
                                    {
                                        "code": "1",
                                        "value": "Several days"
                                    },
                                    {
                                        "code": "2",
                                        "value": "More than half the days"
                                    },
                                    {
                                        "code": "3",
                                        "value": "Nearly every day"
                                    }
                                ]
                            },
                            "maxItems": 1
                        }
                    }
                }
            ]
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/survey"
        },
        {
            "properties": {
                "items": {
                    "type": "array",
                    "items": [
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/frequency_scale_item"
                                },
                                {
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "label": "9",
                                                    "text": "Thoughts that you would be better off dead or of hurting yourself in some way"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/survey_categorical_answer_item"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "question": {
                                            "description": "A survey item that has only one answer.",
                                            "enum": [
                                                {
                                                    "text": "If you checked off any problems, how difficult have these problems made it for you to do your work, take care of things at home, or get along with other people?"
                                                }
                                            ]
                                        },
                                        "answers": {
                                            "items": {
                                                "enum": [
                                                    {
                                                        "value": "Not difficult at all"
                                                    },
                                                    {
                                                        "value": "Somewhat difficult"
                                                    },
                                                    {
                                                        "value": "Very difficult"
                                                    },
                                                    {
                                                        "value": "Extremely difficult"
                                                    }
                                                ]
                                            },
                                            "maxItems": 1
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/survey_categorical_answer_item"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "text": "If you checked off any problems, what are the top two activities affected?"
                                                }
                                            ]
                                        },
                                        "answers": {
                                            "items": {
                                                "enum": [
                                                    {
                                                        "value": "Work"
                                                    },
                                                    {
                                                        "value": "School"
                                                    },
                                                    {
                                                        "value": "Social life"
                                                    },
                                                    {
                                                        "value": "Sleep"
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ],
                    "additionalItems": false
                },
                "delivery_details": {
                    "properties": {
                        "first_delivered_date_time": {
                            "$ref": "#/definitions/date_time"
                        },
                        "last_available_date_time": {
                            "$ref": "#/definitions/date_time"
                        }
                    }
                }
            }
        }
    ]
}