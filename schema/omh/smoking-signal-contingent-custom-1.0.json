{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the signal-contingent recording questions for the MD2K smoking cessation study.",
    "type": "object",
    "references": [
        {
            "description": "This is a custom questionnaire."
        },
        {
            "description": "The SNOMED code represents Tobacco smoking behavior (finding)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/365981007"
        }
    ],

    "definitions": {
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "item": {
            "type": "object",
            "properties": {
                "question": {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string"
                        },
                        "text": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "text"
                    ]
                },
                "answer": {
                    "type": "object",
                    "enum": [
                        {
                            "code": 0,
                            "text": "no"
                        },
                        {
                            "code": 1,
                            "text": "yes"
                        }
                    ],
                    "additionalItems": false
                },
                "effective_time_frame": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_frame"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "items": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/item"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "code": "SCRSmo",
                                            "text": "You seem to be smoking right now. Is this true?"
                                        }
                                    ]
                                }
                            }
                        }
                    ]
                }
            ]
        },
        "time_frame_first_delivered": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "time_frame_last_available": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "status": {
            "type": "string",
            "enum": ["successful","missed","abandoned"]
        },
        "trigger": {
            "type": "string",
            "enum": ["signal"]
        }
    },
    "required": ["time_frame_first_delivered","status"],
    "additionalProperties": false
}