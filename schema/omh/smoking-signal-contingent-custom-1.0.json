{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the signal-contingent recording questions for the MD2K smoking cessation study.",
    "type": "object",
    "references": [
        {
            "description": "This is a custom questionnaire."
        },
        {
            "description": "The SNOMED code represents Tobacco smoking behavior (finding)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/365981007"
        }
    ],

    "definitions": {
        "tuple": {
            "type": "object",
            "properties": {
                "question_identifier": {
                    "type": "string"
                },
                "question_text": {
                    "type": "string"
                },
                "answer": {
                    "type": "array",
                    "enum": [
                        [0, "no"],
                        [1, "yes"]
                    ],
                    "additionalItems": false
                }
            },
            "required": [
                "question_text"
            ],
            "additionalProperties": false
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },
    "properties": {
        "tuples": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "SCRSmo"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "You seem to be smoking right now. Is this true?"
                                    ]
                                }
                            }
                        }
                    ],
                    "effective_time_frame": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/time_frame"
                            },
                            {
                                "required": [
                                    "date_time"
                                ]
                            }
                        ]
                    }
                }
            ]
        },
        "time_frame_first_delivered": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "time_frame_last_available": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "status": {
            "type": "string",
            "enum": ["successful","missed","abandoned"]
        },
        "trigger": {
            "type": "string",
            "enum": ["signal"]
        }
    },
    "required": ["time_frame_first_delivered","status"],
    "additionalProperties": false
}