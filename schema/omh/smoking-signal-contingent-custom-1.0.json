{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the signal-contingent recording questions for the MD2K smoking cessation study.",
    "type": "object",
    "references": [
        {
            "description": "This is a custom questionnaire."
        },
        {
            "description": "The SNOMED code represents Tobacco smoking behavior (finding)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/365981007"
        }
    ],

    "definitions": {
        "question_1": {
            "enum": [
                "You seem to be smoking right now. Is this true?"
            ]
        },
        "answer_yn": {
            "type": "array",
            "items": [
                {
                    "type": "integer"
                },
                {
                    "type": "string"
                }
            ],
            "enum": [
                [0, "no"],
                [1, "yes"]
            ],
            "additionalItems": false
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },
    "properties": {
        "item_1": {
            "type": "object",
            "properties": {
                "question_1": {
                    "$ref": "#/definitions/question_1"
                },
                "answer_1": {
                    "$ref": "#/definitions/answer_yn"
                },
                "effective_time_frame_1": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_frame"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                }
            },
            "required": ["question_1", "answer_1","effective_time_frame_1"]
        },
        "time_frame_first_delivered": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "time_frame_last_available": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },

        "assessment_method": {
            "enum": ["custom"]
        },
        "status": {
            "type": "string",
            "enum": ["successful","missed","abandoned"]
        },
        "trigger": {
            "type": "string",
            "enum": ["signal"]
        }
    },
    "required": ["time_frame_first_delivered","status"],
    "additionalProperties": false
}