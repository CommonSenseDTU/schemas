{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the set of a person's Photographic Affect Meter (PAM) scores, which represent the mood and affective experience of that person.",
    "description": "Question for JP: does it make sense to have descriptive statistics, e.g., min max average?",
    "type": "object",
    "references": [
        {
            "description": "Pollak, J.P., Adams, P., Gay, G. (2011) PAM: a photographic affect meter for frequent, in situ measurement of affect. in the Proceedings of the ACM Conference on Human Factors in Computing Systems (CHI 2011) Vancouver, BC, Canada, May 5-12, pp. 725-734.",
            "url": "http://idl.cornell.edu/projects/pam/"
        },
        {
            "description": "The SNOMED code represents Affect, function (observable entity)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/4065008"
        },
        {
            "description": "The SNOMED code represents Mood, function (observable entity)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/85256008"
        }
    ],
    "definitions": {
        "valence": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4
        },
        "arousal": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4
        },
        "affect": {
            "description": "In PAM, both negative and positive affect use the same value range.",
            "type": "integer",
            "minimum": 1,
            "maximum": 16
        },
        "mood": {
            "type": "string",
            "enum": [
                "afraid",
                "tense",
                "excited",
                "delighted",
                "frustrated",
                "angry",
                "happy",
                "glad",
                "miserable",
                "sad",
                "calm",
                "satisfied",
                "gloomy",
                "tired",
                "sleepy",
                "serene"
            ]
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },
    "properties": {
        "valence": {
            "$ref": "#/definitions/valence"
        },
        "arousal": {
            "$ref": "#/definitions/arousal"
        },
        "positive_affect": {
            "references": [
                {
                    "description": "PA = (4 * Valence) + Arousal - 4"
                }
            ],
            "$ref": "#/definitions/affect"
        },
        "negative_affect": {
            "references": [
                {
                    "description": "NA = 4 * (5 - Valence) + Arousal - 4"
                }
            ],
            "$ref": "#/definitions/affect"
        },
        "effective_time_frame": {
            "$ref": "#/definitions/time_frame"
        },
        "mood": {
            "$ref": "#/definitions/mood"
        }
    },
    "required": [
        "positive_affect"
    ],
    "additionalProperties": false
}