{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents a generic question with categorical values as answers.",
    "type": "object",

    "definitions": {
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },

    "properties": {
        "question": {
            "type": "string"
        },
        "answer": {
            "oneOf": [
                {
                    "type": "array",
                    "items": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                {
                    "type": "array",
                    "items": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "string"
                        }
                    ]
                }
            ]
        },
        "assessment_method": {
            "type": "string"
        },
        "effective_time_frame": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        }
    }
}