{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents a time value answer to a survey question.",

    "type": "object",
    "definitions": {
        "answer": {
            "$ref": "survey-answer-0.x.json"
        },
        "time_of_day": {
            "type": "string",
            "pattern": "^([01]\\d|2[0-3]):[0-5]\\d?$"
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/answer"
        },
        {
            "properties": {
                "value": {
                    "$ref": "#/definitions/time_of_day",
                    "description": "A time of day value (hours and minutes)."
                }
            }
        }
    ]
}