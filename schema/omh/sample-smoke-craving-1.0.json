{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema shows a sample survey with a single Q&A item, where the answer is a single value from a categorical value set.",
    "type": "object",

    "definitions": {
        "date_time": {
            "$ref": "date-time-1.x.json"
        },
        "survey": {
            "$ref": "survey-1.x.json"
        },
        "survey_item": {
            "$ref": "survey-item-1.x.json"
        },
        "survey_categorical_answer": {
            "$ref": "survey-categorical-answer-1.x.json"
        },
        "survey_categorical_answer_item": {
            "allOf": [
                {
                    "$ref": "#/definitions/survey_item"
                },
                {
                    "type": "object",
                    "properties": {
                        "answers": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/survey_categorical_answer"
                            },
                            "maxItems": 1
                        }
                    }
                }
            ]
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/survey"
        },
        {
            "properties": {
                "items": {
                    "type": "array",
                    "minItems": 1,
                    "items": [
                        {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/survey_categorical_answer_item"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "question": {
                                            "enum": [
                                                {
                                                    "label": "SUrge",
                                                    "text": "How strong is your urge to smoke right now?"
                                                }
                                            ]
                                        },
                                        "answers": {
                                            "items": {
                                                "enum": [
                                                    {
                                                        "code": 0,
                                                        "value": "no urge"
                                                    },
                                                    {
                                                        "code": 1,
                                                        "value": "weak"
                                                    },
                                                    {
                                                        "code": 2,
                                                        "value": "moderate"
                                                    },
                                                    {
                                                        "code": 3,
                                                        "value": "strong"
                                                    },
                                                    {
                                                        "code": 4,
                                                        "value": "severe"
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ],
                    "additionalItems": false
                },
                "delivery_details": {
                    "properties": {
                        "first_delivered_date_time": {
                            "$ref": "#/definitions/date_time"
                        },
                        "last_available_date_time": {
                            "$ref": "#/definitions/date_time"
                        },
                        "delay_start_date_time": {
                            "$ref": "#/definitions/date_time"
                        },
                        "delay_end_date_time": {
                            "$ref": "#/definitions/date_time"
                        },
                        "trigger": {
                            "type": "string",
                            "enum": ["random","event","signal","end of day"]
                        }
                    },
                    "required": ["first_delivered_date_time","end_status"]
                }
            }
        }
    ]
}