{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents a person's body fat percentage.",
    "type": "object",
    "references": [
        {
            "description": "The SNOMED codes represents Total body fat (observable entity)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/248361005"
        }
    ],
    "definitions": {
        "unit_value": {
            "$ref": "unit-value-1.x.json"
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        },
        "descriptive_statistic": {
            "$ref": "descriptive-statistic-1.x.json"
        }
    },

    "properties": {
        "body_fat_percentage": {
            "allOf": [
                {
                    "$ref": "#/definitions/unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": ["%"]
                        }
                    }
                }
            ]
        },
        "effective_time_frame": {
            "$ref": "#/definitions/time_frame"
        },
        "descriptive_statistic": {
            "$ref": "#/definitions/descriptive_statistic"
        }
    },

    "required": ["body_fat_percentage"]
}