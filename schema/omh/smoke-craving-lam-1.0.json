{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the Lam et al. self-report smoke craving questionnaire.",
    "type": "object",
    "references": [
        {
            "description": "Lam et al. (2014)"
        },
        {
            "description": "The SNOMED code represents Tobacco smoking behavior (finding)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/365981007"
        }
    ],
    "definitions": {
        "date_time": {
            "$ref": "date-time-1.x.json"
        },
        "generic_categorical_question": {
            "$ref": "generic-categorical-question-1.x.json"
        },
        "categorical_item": {
            "type": "object",
            "properties": {
                "question": {
                    "type": "object",
                    "properties": {
                        "code": {
                            "type": "string"
                        },
                        "text": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "text"
                    ]
                },
                "answer": {
                    "type": "object",
                    "enum": [
                        {
                            "code": 0,
                            "text": "no urge"
                        },
                        {
                            "code": 1,
                            "text": "weak"
                        },
                        {
                            "code": 2,
                            "text": "moderate"
                        },
                        {
                            "code": 3,
                            "text": "strong"
                        },
                        {
                            "code": 4,
                            "text": "severe"
                        }
                    ],
                    "additionalItems": false
                },
                "start_date_time": {
                    "$ref": "#/definitions/date_time"
                },
                "end_date_time": {
                    "$ref": "#/definitions/date_time"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "items": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/generic_categorical_question"
                        },
                        {
                            "properties": {
                                "question": {
                                    "enum": [
                                        {
                                            "code": "SUrge",
                                            "text": "How strong is your urge to smoke right now?"
                                        }
                                    ]
                                },
                                "answer": {
                                    "enum": [
                                        {
                                            "code": 0,
                                            "text": "no urge"
                                        },
                                        {
                                            "code": 1,
                                            "text": "weak"
                                        },
                                        {
                                            "code": 2,
                                            "text": "moderate"
                                        },
                                        {
                                            "code": 3,
                                            "text": "strong"
                                        },
                                        {
                                            "code": 4,
                                            "text": "severe"
                                        }
                                    ],
                                    "additionalItems": false
                                },
                                "start_date_time": {
                                    "$ref": "#/definitions/date_time"
                                },
                                "end_date_time": {
                                    "$ref": "#/definitions/date_time"
                                }
                            },
                            "additionalProperties": false
                        }
                    ]
                }
            ],
            "additionalItems": false
        },
        "first_delivered_date_time": {
            "$ref": "#/definitions/date_time"
        },
        "start_date_time": {
            "$ref": "#/definitions/date_time"
        },
        "last_available_date_time": {
            "$ref": "#/definitions/date_time"
        },
        "delay_start_date_time": {
            "$ref": "#/definitions/date_time"
        },
        "delay_end_date_time": {
            "$ref": "#/definitions/date_time"
        },
        "status": {
            "type": "string",
            "enum": ["successful","missed","abandoned"]
        },
        "trigger": {
            "type": "string",
            "enum": ["random","event","signal","end of day"]
        }
    },
    "required": ["first_delivered_date_time","status"],
    "additionalProperties": false
}
