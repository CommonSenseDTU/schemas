{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the Lam et al. self-report smoke craving questionnaire.",
    "type": "object",
    "references": [
        {
            "description": "Lam et al. (2014)"
        },
        {
            "description": "The SNOMED code represents Tobacco smoking behavior (finding)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/365981007"
        }
    ],
    "definitions": {
        "tuple": {
            "type": "object",
            "properties": {
                "question_identifier": {
                    "type": "string"
                },
                "question_text": {
                    "type": "string"
                },
                "answer": {
                    "type": "array",
                    "enum": [
                        [0, "no urge"],
                        [1, "weak"],
                        [2, "moderate"],
                        [3, "strong"],
                        [4, "severe"]
                    ],
                    "additionalItems": false
                }
            },
            "required": [
                "question_text"
            ],
            "additionalProperties": false
        },

        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },
    "properties": {
        "tuples": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "allOf": [
                        {
                            "$ref": "#/definitions/tuple"
                        },
                        {
                            "properties": {
                                "question_identifier": {
                                    "enum": [
                                        "SUrge"
                                    ]
                                },
                                "question_text": {
                                    "enum": [
                                        "How strong is your urge to smoke right now?"
                                    ]
                                }
                            }
                        }
                    ],
                    "effective_time_frame": {
                        "allOf": [
                            {
                                "$ref": "#/definitions/time_frame"
                            },
                            {
                                "required": [
                                    "date_time"
                                ]
                            }
                        ]
                    }
                }
            ]
        },
        "time_frame_first_delivered": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "time_frame_last_available": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "assessment_method": {
            "enum": ["Lam et al."]
        },
        "status": {
            "type": "string",
            "enum": ["successful","missed","abandoned"]
        },
        "trigger": {
            "type": "string",
            "enum": ["random","event","signal","end of day"]
        }
    },
    "required": ["time_frame_first_delivered","status"],
    "additionalProperties": false
}