{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "This schema represents the Lam et al. self-report smoke craving questionnaire.",
    "type": "object",
    "references": [
        {
            "description": "Lam et al. (2014)"
        },
        {
            "description": "The SNOMED code represents Tobacco smoking behavior (finding)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/365981007"
        }
    ],
    "definitions": {
        "question": {
            "enum": ["How strong is your urge to smoke right now?"]
        },
        "answer": {
            "type": "array",
            "items": [
                {
                    "type": "integer"
                },
                {
                    "type": "string"
                }
            ],
            "enum": [
                [0, "no urge"],
                [1, "weak"],
                [2, "moderate"],
                [3, "strong"],
                [4, "severe"]
            ],
            "additionalItems": false
        },
        "time_frame": {
            "$ref": "time-frame-1.x.json"
        }
    },
    "properties": {
        "item": {
            "type": "object",
            "properties": {
                "question": {
                    "$ref": "#/definitions/question"
                },
                "answer": {
                    "$ref": "#/definitions/answer"
                },
                "effective_time_frame": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/time_frame"
                        },
                        {
                            "required": [
                                "date_time"
                            ]
                        }
                    ]
                }
            },
            "required": ["question", "answer", "effective_time_frame"]
        },
        "time_frame_first_delivered": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "time_frame_last_available": {
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["date_time"]
                }
            ]
        },
        "assessment_method": {
            "enum": ["Lam et al."]
        },
        "status": {
            "type": "string",
            "enum": ["successful","missed","abandoned"]
        },
        "trigger": {
            "type": "string",
            "enum": ["random","event","signal","end of day"]
        }
    },
    "required": ["time_frame_first_delivered","status"],
    "additionalProperties": false
}