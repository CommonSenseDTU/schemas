{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "This schema represents duration of sleep either as a single measurement, or as the result of aggregating several measurements made over time (see Descriptive statistic schema for a list of aggregate measures)",
    "references": [
        {
            "description": "The SNOMED code represents Duration of sleep (observable entity)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/248263006"
        }
    ],

    "definitions": {
        "duration_unit_value": {
            "$ref": "../generic/duration-unit-value-1.0.json"
        },
        "time_frame": {
            "$ref": "../generic/time-frame-1.0.json"
        },
        "descriptive_statistic": {
            "$ref": "../generic/descriptive-statistic-1.0.json"
        },
        "duration_unit_value": {
            "$ref": "../generic/duration-unit-value-1.0.json"
        }
    },

    "properties": {
        "sleep_duration": {
            "allOf": [
                {
                    "$ref": "#/definitions/duration_unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": [
                                "sec",
                                "min",
                                "h"
                            ]
                        }
                    }
                }
            ]
        },
        "effective_time_frame": {
            "description": "A measurement of sleep duration cannot by definition be associated to a date-time, so the effective time frame must be a time interval.",
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["time_interval"]
                }
            ]
        },
        "descriptive_statistic": {
            "$ref": "#/definitions/descriptive_statistic"
        },
        "statistic_time_denominator": {
            "description": "The time denominator of the descriptive statistic. For example, in the case of average daily sleep duration, the value would be d.",
            "allOf": [
                {
                    "$ref": "#/definitions/duration_unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": [
                                "d",
                                "wk",
                                "Mo"
                            ]
                        }
                    }
                }
            ]
        },
        "user_notes": {
            "type": "string"
        }
    },

    "required": ["sleep_duration"]
}