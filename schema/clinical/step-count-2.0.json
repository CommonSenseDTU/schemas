{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents number of steps within, either as a single measurement, or as the result of aggregating several measurements made over time (see Descriptive statistic schema for a list of aggregate measures)",
    "type": "object",
    "references": [
        {
            "description": "The LOINC code refers to Number of steps in unspecified time Pedometer",
            "url": "http://purl.bioontology.org/ontology/LNC/55423-8"
        }
    ],

    "definitions": {
        "time_frame": {
            "$ref": "../generic/time-frame-1.0.json"
        },
        "descriptive_statistic": {
            "$ref": "../generic/descriptive-statistic-1.0.json"
        },
        "duration_unit_value": {
            "$ref": "../generic/duration-unit-value-1.0.json"
        }
    },

    "properties": {
        "step_count": {
            "type": "number"
        },
        "effective_time_frame": {
            "description": "A measurement of step count cannot be associated to a date-time, because it inherently lasts over time, so the effective time frame must be a time interval.",
            "allOf": [
                {
                    "$ref": "#/definitions/time_frame"
                },
                {
                    "required": ["time_interval"]
                }
            ]
        },
        "descriptive_statistic": {
            "$ref": "#/definitions/descriptive_statistic"
        },
        "statistic_time_denominator": {
            "description": "The time denominator of the descriptive statistic. For example, in the case of average daily step count, the value would be d.",
            "allOf": [
                {
                    "$ref": "#/definitions/duration_unit_value"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": [
                                "min",
                                "h",
                                "d",
                                "wk",
                                "Mo"
                            ]
                        }
                    }
                }
            ]
        }
    },

    "required": ["step_count"]
}