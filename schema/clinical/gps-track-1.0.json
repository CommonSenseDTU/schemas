{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents a GPS tracking.",
    "type": "object",
    "references": [
        {
            "description": "The SNOMED code represents ",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/"
        }
    ],
    "definitions": {
        "plane_angle_unit_value": {
            "$ref": "../generic/plane-angle-unit-value-1.0.json"
        },
        "length_unit_value": {
            "$ref": "../generic/length-unit-value-1.0.json"
        },
        "time_frame": {
            "$ref": "../generic/time-frame-1.0.json"
        }
    },

    "properties": {
        "latitude": {
            "references": [
                {
                    "description": "The NCIT code represents Latitude. The angular distance north or south between an imaginary line around a heavenly body parallel to its equator and the equator itself. Negative numbers indicate South.",
                    "url": "http://ncicb.nci.nih.gov/xml/owl/EVS/Thesaurus.owl#C68642"
                }
            ],
            "$ref": "#/definitions/plane_angle_unit_value"
        },
        "longitude": {
            "references": [
                {
                    "description": "The ?? code represents Longitude. Negative numbers indicate West.",
                    "url": "http://purl.bioontology.org/ontology/SNOMEDCT/"
                }
            ],
            "$ref": "#/definitions/plane_angle_unit_value"
        },
        "elevation": {
            "$ref": "#/definitions/length_unit_value"
        },
        "bearing": {
            "references": [
                {
                    "description": "The compass direction from your current position to your intended destination. Bearing is used to describe the direction of a destination or object. Also known as, azimuth",
                    "url": "http://purl.bioontology.org/ontology/SNOMEDCT/"
                }
            ],
            "$ref": "#/definitions/plane_angle_unit_value"
        },
        "effective_time_frame": {
            "$ref": "#/definitions/time_frame"
        }
    },
    "required": [
        "latitude",
        "longitude"
    ]
}