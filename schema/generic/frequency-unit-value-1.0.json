{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents the frequency of an event as number of times over a duration, e.g., 1/14 d meaning once every 14 days.",

    "type": "object",

    "references": [
        {
            "description": "The SNOMED code represents Frequency (quantitative concept)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/260864003"
        }
    ],
    "definitions": {
        "duration": {
            "$ref": "duration-unit-value-1.0.json"
        },
        "part_of_day": {
            "$ref": "part-of-day-1.0.json"
        },
        "time": {
            "$ref": "time-1.0.json"
        },
        "part_of_day_interval": {
            "properties": {
                "value": {
                    "description": "The numeric value of the element.",
                    "type": "number"
                },
                "unit": {
                    "$ref": "#/definitions/part_of_day"
                }
            },
            "required": [
                "value",
                "unit"
            ]
        }
    },

    "oneOf": [
        {
            "properties": {
                "number_of_times": {
                    "type": "number"
                },
                "duration": {
                    "$ref": "#/definitions/duration"
                }
            },
            "required": [
                "number_of_times",
                "duration"
            ]
        },
        {
            "properties": {
                "number_of_times": {
                    "type": "number"
                },
                "part_of_day_interval": {
                    "$ref": "#/definitions/part_of_day_interval"
                }
            },

            "required": [
                "number_of_times",
                "part_of_day_interval"
            ]
        },
        {
            "properties": {
                "time_of_day": {
                    "$ref": "#/definitions/time"
                }
            },
            "required": ["time_of_day"]
        }
    ]
}