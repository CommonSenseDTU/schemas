{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents the frequency of an event as number of times over a duration, e.g., 1/14 d meaning once every 14 days.",

    "type": "object",

    "references": [
        {
            "description": "The SNOMED code represents Frequency (quantitative concept)",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/260864003"
        }
    ],
    "definitions": {
        "duration": {
            "$ref": "duration-unit-value-1.0.json"
        },
        "fuzzy_duration": {
            "$ref": "fuzzy-duration-unit-value-1.0.json"
        },
        "time": {
            "$ref": "time-1.0.json"
        }
    },

    "oneOf": [
        {
            "properties": {
                "number_of_times": {
                    "type": "number"
                },
                "duration": {
                    "$ref": "#/definitions/duration"
                }
            },
            "required": [
                "number_of_times",
                "duration"
            ]
        },
        {
            "properties": {
                "number_of_times": {
                    "type": "number"
                },
                "fuzzy_duration": {
                    "$ref": "#/definitions/fuzzy_duration"
                }
            },

            "required": [
                "number_of_times",
                "fuzzy_duration"
            ]
        },
        {
            "properties": {
                "time": {
                    "$ref": "#/definitions/time"
                }
            },
            "required": ["time"]
        }
    ]
}