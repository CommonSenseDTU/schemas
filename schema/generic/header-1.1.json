{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents the header of a data transaction.",
    "type": "object",

    "definitions": {
        "date_time": {
            "$ref": "date-time-1.0.json"
        },
        "schema_id": {
            "$ref": "schema-id-1.0.json"
        }
    },

    "properties": {
        "id": {
            "type": "string"
        },
        "creation_date_time": {
            "description": "The date time (timestamp) of data acquisition.",
            "$ref": "#/definitions/date_time"
        },
        "schema_id": {
            "$ref": "#/definitions/schema_id"
        },
        "modality": {
            "description": "The modality whereby the data is obtained.",
            "type": "string",
            "enum": ["sensed","self-reported","proxy-reported"]
        },
        "source_creation_date_time": {
            "description": "The date time (timestamp) of data creation at the source.",
            "$ref": "#/definitions/date_time"
        }
    },

    "required": [
        "id",
        "creation_date_time",
        "schema_id"
    ]
}