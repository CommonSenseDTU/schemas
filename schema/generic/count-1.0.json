{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "description": "This schema represents the count (number) of some elements (unit).",

    "type": "object",

    "properties": {
        "value": {
            "description": "The count of the element.",
            "type": "number"
        },
        "unit": {
            "description": "The element being counted.",
            "type": "string"
        }
    },
    "required": [
        "value",
        "unit"
    ]
}