{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "This schema represents a section in a consent document.",

    "definitions": {
        "date_time": {
            "$ref": "../omh/date-time-1.x.json"
        }
    },

    "properties": {
        "id": {
            "description": "The identifier of this consent document. We strongly recommend this to be a globally unique value.",
            "type": "string"
        },
        "creation_date_time": {
            "description": "The date time this consent document was created.",
            "$ref": "#/definitions/date_time"
        },
        "modification_date_time": {
            "description": "The date time this consent document was last modified.",
            "$ref": "#/definitions/date_time"
        },
        "title": {
            "description": "Title of the consent document",
            "type": "string"
        },
        "type": {
            "description": "Type of the consent document",
            "type": "string"
        },
        "summary": {
            "description": "Summary of the consent document",
            "type": "string"
        },
        "content": {
            "description": "Content of the consent document",
            "type": "string"
        },
        "popup": {
          "description": "Content of a popup shown in this consent document",
          "type": "string"
        },
        "options": {
            "description": "List of document consent section options",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },

    "required": [
        "id",
        "creation_date_time",
        "sections"
    ]
}
